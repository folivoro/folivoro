{
  "name": "folivoro/folivoro",
  "description": "Folivoro â€“ the framework for the lazy WordPress developer.",
  "license": "MIT",
  "type": "project",
  "require": {
    "php": "^8.1",
    "composer/installers": "^2.2",
    "folivoro/plugin": "dev-main",
    "johnpbloch/wordpress": "^6.2",
    "roots/wp-password-bcrypt": "^1.1"
  },
  "require-dev": {
    "pestphp/pest": "^2.6"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "johnpbloch/wordpress-core-installer": true,
      "pestphp/pest-plugin": true
    },
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "extra": {
    "installer-paths": {
      "public/extensions/components/{$name}/": [
        "type:wordpress-muplugin"
      ],
      "public/extensions/plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "public/themes/{$name}/": [
        "type:wordpress-theme"
      ]
    },
    "wordpress-install-dir": "public/cms"
  }
}
